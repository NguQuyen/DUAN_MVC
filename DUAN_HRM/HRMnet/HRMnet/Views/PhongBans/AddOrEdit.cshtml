@model HRMnet.Models.PhongBan
@{
    Layout = null;
}

<form id="phongBanForm" role="form" autocomplete="off" class="form-horizontal">
    <div class="form-horizontal" style="padding:0px 20px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input id="MaPhongBan" name="MaPhongBan" type="hidden" value="@Model.MaPhongBan" />
        <div class="form-group">
            @Html.LabelFor(model => model.TenPhongBan, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.TenPhongBan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenPhongBan, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = 3 })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
</form>
